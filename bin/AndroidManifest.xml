<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zombie.dedzed"
    android:versionCode="1"
    android:versionName="1.0" >
    <!--Permission for gps- is this in the right place?-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.INTERNET" />
    
    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SurvivalActivity"
            android:label="@string/title_activity_survival" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".myMapActivity"
            android:label="@string/titleMap" />
        <activity android:name=".WallActivity"
            android:label="@string/titleWall" />
        <activity android:name=".TradeActivity"
            android:label="@string/titleTrade" />
        
    </application>

</manifest>